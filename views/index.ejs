<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Car Collection</title>
</head>
<body>
    <h1>Car Collection</h1>
    <a href="/cars/new">Add a New Car</a>
    <ul>
        <% cars.forEach(car => { %>
            <li>
                <strong><%= car.make %> <%= car.model %> (<%= car.year %>)</strong>
                <p><%= car.description %></p>
                <a href="/cars/edit/<%= car._id %>">Edit</a>
                <form action="/cars/delete/<%= car._id %>" method="POST" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </li>
        <% }) %>
    </ul>
</body>
</html>